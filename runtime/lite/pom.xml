<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.google.appengine</groupId>
    <artifactId>runtime-lite</artifactId>
    <parent>
        <groupId>com.google.appengine</groupId>
        <artifactId>runtime-parent</artifactId>
        <version>2.0.14-SNAPSHOT</version>
    </parent>

    <packaging>jar</packaging>
    <name>AppEngine :: runtime-lite</name>

    <dependencies>
        <dependency>
            <groupId>com.google.appengine</groupId>
            <artifactId>runtime-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.appengine</groupId>
            <artifactId>runtime-shared</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.cloud</groupId>
            <artifactId>google-cloud-logging</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.auto.value</groupId>
            <artifactId>auto-value</artifactId>
            <scope>provided</scope>
        </dependency>
        <!-- Test dependencies. -->
        <dependency>
            <groupId>com.google.truth</groupId>
            <artifactId>truth</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.google.testparameterinjector</groupId>
            <artifactId>test-parameter-injector</artifactId>
            <version>1.10</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.google.truth.extensions</groupId>
            <artifactId>truth-java8-extension</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-client</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.google.appengine</groupId>
            <artifactId>runtime-impl</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createSourcesJar>true</createSourcesJar>
                            <relocations>
                                <relocation>
                                    <pattern>com.beust</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.beust</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.esotericsoftware</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com..esotericsoftware</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.fasterxml</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.fasterxml</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.api</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.api</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.appengine.api</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.appengine.api</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.appengine.spi</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.appengine.spi</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.appengine.tools</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.appengine.tools</shadedPattern>
                                </relocation>

                                <relocation>
                                    <pattern>com.google.borg</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.borg</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.cloud</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.cloud</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.common</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.common</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.datastore</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.datastore</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.gson</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.gson</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.logging</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.logging</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.protobuf</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.protobuf</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.protos</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.protos</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.rpc</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.rcp</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.storage</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.storage</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.auto</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.auto</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.errorprone</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.errorprone</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.geo</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.geo</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.j2objc</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.j2objc</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.longrunning</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.longrunning</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.cloud.logging</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.cloud.logging</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.thirdparty</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.thirdparty</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.type</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.type</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.sun</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.sun</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>google</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.google</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>io</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.io</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.org</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.apphosting</pattern>
                                    <shadedPattern>com.google.appengine.repackaged.com.google.apphosting</shadedPattern>
                                </relocation>
                            </relocations>
                            <filters>
                                <filter>
                                    <artifact>com.google.appengine:protos</artifact>
                                    <includes>
                                        <include>com/google/apphosting/api/**</include>
                                    </includes>
                                </filter>
                            </filters>
                            <artifactSet>
                                <includes>
                                    <include>com.google.appengine:runtime-impl</include>
                                    <include>com.google.appengine:runtime-shared</include>
                                    <include>com.google.cloud:google-cloud-logging</include>
                                </includes>

                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.2.2</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
